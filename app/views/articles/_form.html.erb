<%= form_with model: article do |form| %>
  <div>
    <%= form.label :titles %><br>
    <%= form.text_field :titles %>
    <% article.errors.full_messages_for(:titles).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
